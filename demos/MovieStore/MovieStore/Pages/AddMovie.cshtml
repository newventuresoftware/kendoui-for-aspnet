@page
@model AddMovie
@{
    ViewData["Title"] = "Add Movie";
}
<h2>@ViewData["Title"]</h2>

<div class="jumbotron">
    <div asp-validation-summary="All"></div>

    <form method="post">
        <div class="row">
            <label asp-for="Movie.Title"></label>
            <input asp-for="Movie.Title" />
        </div>
        <div class="row">
            <label for="ReleaseDate"></label>
            <kendo-datepicker name="Movie.ReleaseDate" value="Model.Movie.ReleaseDate" format="dd/MM/yyyy" />
        </div>
        <div class="row">
            <label for="Rating"></label>
            <kendo-numerictextbox name="Movie.Rating" value="Model.Movie.Rating" />
        </div>
        <div class="row">
            <label for="Genre"></label>
            <kendo-dropdownlist name="Movie.Genre" value="Model.Movie.Genre" bind-to="Model.Genres"></kendo-dropdownlist>
        </div>
        <div class="row">
            <input type="submit" value="Submit" />
        </div>
    </form>
</div>
<script>
    $(function () {
        $('form').kendoValidator();
    });
</script>